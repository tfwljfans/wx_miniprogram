.header-img{
  width: 450rpx;
  height: 38rpx;
  margin-left: 160rpx;
  margin-bottom: -12rpx;
}

.container-background {
  margin: 10rpx;
  display: flex;
  flex-direction: column;
  background-color: rgba(241, 241, 241, 0.95);
  border-radius: 8px;
}

.container-header {
  margin-top: 20rpx;
  margin-bottom: 20rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
}

.avatar {
  margin-left: 40rpx;
  border-radius: 8px;
  display: block;
  width: 100px;
  height: 100px;
  background-color: #fff;
}

.userinfo {
  display: grid;
  grid-template-rows: 75rpx 1fr;
  flex-direction: column;
  align-items: right;
  justify-content: right;
  margin-left: 30rpx;
}

.userinfo .userinfo-text {
  font-size: 40rpx;
}

.userinfo .userinfo-select {
  display: grid;
  grid-template-columns: auto 300rpx;
  justify-self: start;
  align-items: center;
}

.userinfo .userinfo-select .select_custom{
  display: grid;
  grid-template-columns: 120rpx 30rpx;
  width: 200rpx;
  text-align: center;
}
.userinfo .userinfo-select .select_title{
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}



.container-collapse-background {
  margin: 10rpx;
  display: flex;
  flex-direction: column;
  background-color: rgba(241, 241, 241, 0.95);
  border-radius: 8px;
}

.container-collapse-title {
  text-align: center;
}

.collapse-item {
  color: #000;
  font-size: 30rpx;
}

.collapse-body .collapse-title {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  height: 100rpx;
  align-items: center;
  /* justify-content: center; */
}

.collapse-body .collapse-title .left {
  grid-column: 1/2;
  width: 180rpx;
  border-right: 1.5px solid #ededed;
}

.collapse-title .left image {
  margin-left: 40rpx;
  border-radius: 8px;
  display: block;
  width: 40px;
  height: 40px;
  /* background-color: #fff; */
}

.collapse-body .collapse-title .right {
  grid-column: 2/3;
  display: grid;
  grid-template-rows: repeat(2, 1fr);
}

.collapse-title .right .name {
  font-size: 30rpx;
  font-weight: bold;
  display: grid;
  justify-content: left;
  align-items: center;
}

.collapse-title .right .info {
  display: grid;
  justify-content: left;
  align-items: center;
}

.van-collapse-item {
  border-radius: 8px;
  margin-bottom: 10px;
  box-shadow: 0px 0px 10px 0px rgba(0, 0, 0, 0.1);
}

.van-cell {
  padding: 0 0.42rem 0 0;
  border-radius: 8px;
  /* text-align: center; */
  align-items: center;
}

.van-cell__right-icon {
  margin-top: 0.38rem;
}

.van-collapse-item__content {
  padding: 10px;
  color: #000;
}




